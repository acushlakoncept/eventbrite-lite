<div class="container">
  <div class="row mt-3">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1 class="text-center">Add Event</h1>
      <%= form_for(@event) do |f| %>
        <div class="form-group">
            <%= f.text_area :description, autofocus: true, placeholder: "Event Description", class: "form-control"  %>
        </div>
        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>